<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/project_color_bg"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/icon_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="广州 从化"
            android:textSize="@dimen/text_size_10_sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <Button
                android:id="@+id/btn_search_location_id"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/orange_btn_bg"
                android:padding="1dp"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10_sp" />

            <EditText
                android:id="@+id/editxt_input_location_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/btn_search_location_id"
                android:background="@drawable/editxt_input_bg"
                android:hint="输入地名"
                android:padding="5dp"
                android:textSize="@dimen/text_size_10_sp" />
        </RelativeLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/express_index_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:scrollbars="none" >
    </ExpandableListView>

</LinearLayout>